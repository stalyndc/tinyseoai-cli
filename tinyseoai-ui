#!/usr/bin/env bash
# TinySEO AI - Interactive UI Launcher

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
TUI_BIN="$SCRIPT_DIR/rust-ui/target/release/tinyseoai-tui"

# Check if TUI binary exists
if [ ! -f "$TUI_BIN" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  TUI not built yet. Building now...${NC}"
    cd "$SCRIPT_DIR/rust-ui"
    cargo build --release
    cd "$SCRIPT_DIR"
    echo -e "${GREEN}‚úÖ TUI built successfully!${NC}"
fi

# Check if URL is provided
if [ $# -eq 0 ]; then
    echo -e "${CYAN}üöÄ TinySEO AI - Interactive UI${NC}"
    echo ""
    echo "Usage: $0 <url>"
    echo ""
    echo "Example:"
    echo "  $0 https://example.com"
    echo ""
    exit 1
fi

# Launch TUI
echo -e "${CYAN}üöÄ Launching TinySEO AI Interactive UI...${NC}"
"$TUI_BIN" "$@"
